// Source code message popup
(function() {
  'use strict';
  let e=false;
  const t=()=>{const t=window.outerWidth-window.innerWidth>160,h=window.outerHeight-window.innerHeight>160;if((t||h)&&!e){e=true,showSourceCodeMessage()}else if(!t&&!h&&e){e=false}};
  setInterval(t,500);
  window.addEventListener("resize",t);
  document.addEventListener("keydown",function(e){(e.ctrlKey&&e.shiftKey&&(e.key==="I"||e.key==="J"||e.key==="C")||e.key==="F12")&&(e.preventDefault(),showSourceCodeMessage())});
  document.addEventListener("contextmenu",function(e){e.preventDefault();showSourceCodeMessage();return false});
  const n=new Function("debugger");
  setInterval(()=>{try{n()}catch(e){if(e.message.includes("debugger"))showSourceCodeMessage()}},1000);
})();
function showSourceCodeMessage(){
  if(document.querySelector('.source-code-message'))return;
  const e=document.createElement('div');
  e.className='source-code-message';
  e.innerHTML=`<h2>Hayo, mau ngapain? ðŸ˜Š</h2><p></p><div class="contact-info"><p><i class="fab fa-whatsapp"></i> WA: 089686960526</p><p><i class="fab fa-instagram"></i> IG: @_zans.rzky</p></div><button onclick="this.parentElement.remove()">Tutup</button>`;
  document.body.appendChild(e);
  document.addEventListener("keydown",blockKeys,true);
}
function blockKeys(e){e.stopPropagation();e.preventDefault();}
document.addEventListener("click",function(e){
  if(e.target.closest('.source-code-message button')){
    const t=document.querySelector('.source-code-message');
    if(t)t.remove();
    document.removeEventListener("keydown",blockKeys,true);
  }
});

// Close menu when clicking outside
document.addEventListener('click', function(event) {
  const menuBtn = document.querySelector('.menu-btn');
  const menuOverlay = document.getElementById('menuOverlay');
  
  if (!menuBtn.contains(event.target) && !menuOverlay.contains(event.target)) {
    menuBtn.classList.remove('active');
    menuOverlay.classList.remove('active');
  }
});

function sendWhatsAppMessage() {
  const name = document.getElementById('contact-name').value;
  const purpose = document.getElementById('contact-purpose').value;
  const message = `NAMA: ${name}, TUJUAN: ${purpose}`;
  const whatsappNumber = "6289686960526";
  const url = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`;
  window.open(url, "_blank");
}
