<script>
// Toggle menu function
function toggleMenu() {
  const menuBtn = document.querySelector('.menu-btn');
  const menuOverlay = document.getElementById('menuOverlay');
  
  menuBtn.classList.toggle('active');
  menuOverlay.classList.toggle('active');
}

// Show page function
function showPage(pageId) {
  // Hide all pages
  document.querySelectorAll('.page').forEach(page => {
    page.classList.remove('active');
  });

  // Find the target page
  const targetPage = document.getElementById(pageId);
  if (targetPage) {
    // Show selected page
    targetPage.classList.add('active');

    // Scroll directly to the target page for specific IDs
    if (['profile-page', 'result-page', 'location-page', 'contact-page'].includes(pageId)) {
      targetPage.scrollIntoView({ behavior: 'auto' });
    } else {
      // Smooth scroll for other pages
      const targetPosition = targetPage.offsetTop;
      window.scrollTo({
        top: targetPosition,
        behavior: 'smooth'
      });
    }

    // Close menu after a short delay to ensure smooth navigation
    setTimeout(() => {
      toggleMenu();
    }, 300); // Adjust delay as needed
  } else {
    console.error(`Page with id "${pageId}" not found.`);
  }
}

// Existing functions
function toggleContent(e,t){const n=document.getElementById(e);n.classList.contains("show")?(n.classList.remove("show"),t.textContent=t.textContent.replace("Tutup","Tampilkan")):(document.querySelectorAll(".content-list").forEach(e=>e.classList.remove("show")),document.querySelectorAll(".btn-toggle").forEach(e=>{e!==t&&e.textContent.includes("Tutup")&&(e.textContent=e.textContent.replace("Tutup","Tampilkan"))}),n.classList.add("show"),t.textContent=t.textContent.replace("Tampilkan","Tutup"))}
function toggleWhatsApp(){document.getElementById("wa-button").classList.toggle("active")}
function openInstagram(){window.open("https://instagram.com/_zans.rzky","_blank");}
function openWhatsApp(){
  const nomor = "6289686960526";
  const waktu = new Date();
  const jam = waktu.getHours();
  let pesan = "Selamat pagi";
  if(jam >= 12 && jam < 15) pesan = "Selamat siang";
  else if(jam >= 15 && jam < 18) pesan = "Selamat sore";
  else if(jam >= 18 || jam < 4) pesan = "Selamat malam";
  const url = `https://wa.me/${nomor}?text=${encodeURIComponent(pesan)}`;
  window.open(url, "_blank");
}
function sendTestimoni() {
  const isiTestimoni = document.getElementById('testimoni-input').value;
  const subject = encodeURIComponent("Testimoni Zanuar Business");
  const body = encodeURIComponent(isiTestimoni);
  window.location.href = `mailto:rizkyzanuar2@gmail.com?subject=${subject}&body=${body}`;
}

